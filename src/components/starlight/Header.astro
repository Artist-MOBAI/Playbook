---
const { siteTitle } = Astro.locals.starlightRoute;
---

<div
  class="w-full px-4 lg:px-6 flex justify-between items-center h-15 bg-[#0E0E0E] border-b border-(--color-border)"
>
  <a href="/">
    <h1
      class="font-normal! h-6 text-[18px]! leading-6! font-(family-name:--font-orbix)"
      style="color: var(--color-text, #f2f2f2);"
    >
      <span class="text-orange-500 mr-1">/</span>{siteTitle}
    </h1>
  </a>
</div>
