---
import Search from "./Search.astro";
const { siteTitle } = Astro.locals.starlightRoute;
---

<div
  class="w-full px-6 flex justify-between items-center h-15 bg-[#0E0E0E] border-b border-(--color-border)"
>
  <a href="/">
    <h1
      class="font-normal! text-(--color-text) h-6 text-[18px]! leading-6! font-[Orbix]"
    >
      <span class="text-orange-500">/</span>{siteTitle}
    </h1>
  </a>

  <Search />
</div>
